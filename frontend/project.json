{
    "name": "headless-cms",
    "$schema": "node_modules/nx/schemas/project-schema.json",
    "includedScripts": [],
    "projectType": "application",
    "prefix": "app",
    "sourceRoot": "./src",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@angular/build:application",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "outputPath": "dist/headless-cms",
                "browser": "./src/main.ts",
                "tsConfig": "tsconfig.app.json",
                "assets": [
                    {
                        "glob": "**/*",
                        "input": "public"
                    }
                ],
                "styles": [
                    "./src/styles.css"
                ]
            },
            "configurations": {
                "production": {
                    "budgets": [
                        {
                            "type": "initial",
                            "maximumWarning": "500kb",
                            "maximumError": "1mb"
                        },
                        {
                            "type": "anyComponentStyle",
                            "maximumWarning": "4kb",
                            "maximumError": "8kb"
                        }
                    ],
                    "outputHashing": "all"
                },
                "development": {
                    "optimization": false,
                    "extractLicenses": false,
                    "sourceMap": true
                }
            },
            "defaultConfiguration": "production"
        },
        "serve": {
            "continuous": true,
            "executor": "@angular/build:dev-server",
            "configurations": {
                "production": {
                    "buildTarget": "headless-cms:build:production"
                },
                "development": {
                    "buildTarget": "headless-cms:build:development"
                }
            },
            "defaultConfiguration": "development"
        },
        "extract-i18n": {
            "executor": "@angular/build:extract-i18n",
            "options": {
                "buildTarget": "headless-cms:build"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "options": {
                "lintFilePatterns": [
                    "./src"
                ]
            }
        },
        "test": {
            "executor": "@nx/vite:test",
            "outputs": [
                "{options.reportsDirectory}"
            ],
            "options": {
                "reportsDirectory": "coverage/headless-cms"
            }
        },
        "serve-static": {
            "continuous": true,
            "executor": "@nx/web:file-server",
            "options": {
                "buildTarget": "headless-cms:build",
                "port": 4200,
                "staticFilePath": "dist/headless-cms/browser",
                "spa": true
            }
        }
    }
}
